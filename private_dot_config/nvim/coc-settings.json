{
  "hover.floatConfig": { "border": true },
  "suggest.floatConfig": { "border": true },
  "diagnostic.floatConfig": { "border": true },
  "python.formatting.provider": "none",
  "ruff.enableExperimentalFormatter": true,
  "ruff.autoFixOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "typescript",
    "json",
    "javascript",
    "go",
    "yaml",
    "markdown",
    "lua",
    "cc",
    "hh",
    "vue"
  ],
  "suggest.pumFloatConfig": {
    "border": true
  },
  "clangd.path": "/usr/bin/clangd",
  "clangd.fallbackFlags": ["-std=c++17"],
  "htmldjango.djlint.commandPath": "/opt/homebrew/bin/djlint",
  "htmldjango.hoverLang": "django",
  "htmldjango.djlint.enableLint": true,
  "htmldjango.djlint.lintOnSave": true,
  "htmldjango.djlint.lintOnChange": true,
  "htmldjango.djlint.lintOnOpen": true,
  "htmldjango.djlint.formatCss": true
}
